<UserControl x:Class="EPS.UI.Controls.PropertyBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EPS.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="PropertyBrowserControl">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid x:Name="Pane" DataContext="{Binding PropertyObject, ElementName=PropertyBrowserControl}" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </ScrollViewer>
</UserControl>
